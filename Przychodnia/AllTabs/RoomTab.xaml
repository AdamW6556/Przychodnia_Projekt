<UserControl x:Class="Przychodnia.AllTabs.RoomTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.AllTabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="RoomListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Numer_sali}" Header="Numer sali" Width="70" />
                    <GridViewColumn DisplayMemberBinding="{Binding ID_poradni}" Header="ID poradni" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Typ_sali}" Header="Typ sali" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
