<UserControl x:Class="Przychodnia.AllTabs.ClinicTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.AllTabs"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <ListView x:Name="ClinicListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding ID_poradni}" Header="ID poradni" Width="70" />
                    <GridViewColumn DisplayMemberBinding="{Binding Nazwa}" Header="Nazwa" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Rodzaj_poradni}" Header="Rodzaj poradni" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Opis}" Header="Opis" Width="800"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
